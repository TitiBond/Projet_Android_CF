<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/resultTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#FFC107"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="FIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FDFBEC"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/levelTextView"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/goodAnswersCountTextView"
        app:layout_constraintEnd_toEndOf="@+id/resultTitleTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/resultTitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/resultTitleTextView"
        tools:text="DifficultÃ© : Facile" />

    <TextView
        android:id="@+id/goodAnswersCountTextView"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFC107"
        app:layout_constraintBottom_toTopOf="@+id/percentageTextView"
        app:layout_constraintEnd_toEndOf="@+id/levelTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/levelTextView"
        app:layout_constraintTop_toBottomOf="@+id/levelTextView"
        tools:text="SCORE : 8/10" />

    <Button
        android:id="@+id/backToMenuButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#FFC107"
        android:text="RETOUR AU MENU"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/percentageTextView" />

    <TextView
        android:id="@+id/percentageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80%"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="#FFC107"
        app:layout_constraintBottom_toTopOf="@+id/backToMenuButton"
        app:layout_constraintEnd_toEndOf="@+id/goodAnswersCountTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/goodAnswersCountTextView"
        app:layout_constraintTop_toBottomOf="@+id/goodAnswersCountTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>